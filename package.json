{
  "name": "rstic",
  "version": "0.0.3-beta",
  "description": "A blazing-fast static site generator with live reload and EJS support, designed for modern development workflows.",
  "main": "./dist/index.js",
  "license": "MIT",
  "bin": {
    "rstic": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "lint": "eslint",
    "format": "prettier --ignore-path .gitignore --write \"./src/**/*.+(js|ts|json)\"",
    "prepare": "husky"
  },
  "keywords": [
    "static-site-generator",
    "ssg",
    "ejs",
    "html",
    "live-reload",
    "express",
    "cli",
    "developer-tools",
    "nodejs"
  ],
  "author": "Rashed Iqbal <dev.rashediqbal@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/iqbal-rashed/rstic.git"
  },
  "homepage": "https://github.com/iqbal-rashed/rstic#readme",
  "bugs": {
    "url": "https://github.com/iqbal-rashed/rstic/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.11",
    "@types/ws": "^8.18.1",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "node-html-parser": "^7.0.1",
    "ws": "^8.18.1"
  }
}
